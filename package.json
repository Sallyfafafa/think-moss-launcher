{
  "name": "think-moss-launcher",
  "productName": "ThinkMoss Launcher",
  "version": "0.1.0",
  "description": "ThinkMoss 启动器",
  "main": "dist/app/main/index.js",
  "scripts": {
    "serve": "concurrently -n web,app,electron -c auto --kill-others-on-fail \"npm run serve:web\" \"npm run serve:app\" \"npm run serve:electron\"",
    "serve:web": "vite --port 9527 --strictPort",
    "serve:app": "tsc --watch --preserveWatchOutput -p tsconfig.app.json --noEmit false --declaration false --outDir dist/app",
    "serve:electron": "nodemon -w dist/app -x \"cross-env NODE_ENV=development electron .\"",
    "build": "npm run build:web && npm run build:app && npm run build:electron",
    "build:web": "tsc && vite build --outDir dist/web",
    "build:app": "tsc -p tsconfig.app.json --noEmit false --declaration false --outDir dist/app",
    "build:electron": "electron-builder",
    "prepare": "husky || true",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": {
    "name": "ThinkMoss",
    "email": "service@thinkmoss.com"
  },
  "dependencies": {
    "@think/moss-browser": "file:think-moss-browser-0.1.0.tgz",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@svgr/rollup": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "antd": "^5.26.2",
    "classnames": "^2.5.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "37.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "less": "^4.3.0",
    "lint-staged": "^16.1.2",
    "lodash-es": "^4.17.21",
    "nodemon": "^3.1.10",
    "normalize.css": "^8.0.1",
    "prettier": "^3.6.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "react-router-dom": "^7.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.0",
    "vite-plugin-checker": "^0.9.3"
  }
}
